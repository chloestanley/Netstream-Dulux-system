@model List<DULUXFINALPART1.Models.Scan_Image>

<div class="container mt-4">
    <div class="card shadow rounded-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">📋 LCN Report Print</h3>
            @if (Model != null && Model.Any())
            {
                <a href="@Url.Action("DownloadCSV", "Scan_Image", new { searchTerm = ViewBag.SearchTerm, month = ViewBag.Month })" class="btn btn-light btn-sm">
                    ⬇️ Download CSV
                </a>
            }
        </div>

        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>📦 Shipment</th>
                                <th>🚚 Carrier</th>
                                <th>🔢 Total PC</th>
                                
                                <th>🕒 Created At</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Shipment</td>
                                    <td>@item.Carrier</td>
                                    <td>@item.TotalPC</td>
                                    
                                    <td>@item.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning text-center mb-0" role="alert">
                    ⚠️ No records found.
                </div>
            }
        </div>
    </div>
</div>
