@model List<DULUXFINALPART1.Models.Scan_Image>

@{
    ViewData["Title"] = "Top Shipments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary"><i class="bi bi-file-earmark-bar-graph-fill"></i> Latest LCN</h2>
    </div>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger shadow-sm">@ViewBag.ErrorMessage</div>
    }

    <!-- 🔸 Shipments Table -->
    <div class="table-responsive shadow-sm">
        <table class="table table-bordered table-hover text-center">
            <thead class="table-dark">
                <tr>
                    <th>Shipment</th>
                    <th>Total Scans</th>
                    <th>Created At</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var topShipments = Model
                    .GroupBy(x => x.Shipment)
                    .Select(g => new
                    {
                        Shipment = g.Key,
                        Count = g.Count(),
                        LatestCreatedAt = g.Max(x => x.CreatedAt)
                    })
                    .OrderByDescending(x => x.LatestCreatedAt)
                    .Take(5);

                    foreach (var item in topShipments)
                    {
                        <tr>
                            <td>@item.Shipment</td>
                            <td>@item.Count</td>
                            <td>@item.LatestCreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<!-- 💬 Live chat (already present) -->
