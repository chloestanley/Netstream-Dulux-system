@model DULUXFINALPART1.Models.Scan_Image

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
</head>
<body>
    <div class="container text-center mt-4">
        <h1 class="text-danger"><i class="fas fa-trash"></i> Delete LCN</h1>
        <h3>Are you sure you want to delete this item? This action cannot be undone.</h3>

        <!-- Add Instructions Here -->
        <p class="text-muted">Please review the information below before confirming the deletion. If you're certain, click on the 'Delete' button. Otherwise, you can cancel the operation and return to the previous page.</p>

        <!-- Display the image -->
        <div class="mt-4">
            <img src="@Model.ImageUri" alt="Scan Image" class="img-fluid" style="max-width: 400px; max-height: 400px;">
        </div>

        <div class="card mt-3">
            <div class="card-body">
                <p><strong>Shipment:</strong> @Model.Shipment</p>
            </div>
        </div>

        <form asp-action="Delete" method="post" class="mt-3">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash"></i> Delete
            </button>
            <a href="@Url.Action("Index", "Scan_Image")" class="btn btn-secondary">
                <i class="fas fa-times"></i> Cancel
            </a>
        </form>
    </div>
</body>
</html>
