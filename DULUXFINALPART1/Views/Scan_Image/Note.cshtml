@model IEnumerable<DULUXFINALPART1.Models.Scan_Image>

@{
    ViewData["Title"] = "Notifications";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Google Fonts & Font Awesome -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background: linear-gradient(to right, #e3f2fd, #ffffff);
            margin: 0;
            padding: 0;
        }

        .container {
            width: 90%;
            max-width: 1000px;
            margin: 40px auto;
            padding: 20px;
        }

        h1 {
            text-align: center;
            color: #0d6efd;
            font-size: 40px;
            margin-bottom: 40px;
            letter-spacing: 1px;
        }

        .notification-card {
            background-color: #fff;
            border-radius: 15px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
            padding: 25px;
            margin-bottom: 25px;
            border-left: 6px solid #0d6efd;
            transition: transform 0.2s ease, box-shadow 0.3s ease;
        }

            .notification-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
            }

        .content h3 {
            font-size: 22px;
            color: #212529;
            margin: 0 0 10px;
        }

        .content p {
            color: #495057;
            margin: 6px 0;
            font-size: 15px;
        }

            .content p strong {
                color: #343a40;
            }

        .btn-view {
            display: inline-block;
            margin-top: 15px;
            padding: 10px 18px;
            background-color: #0d6efd;
            color: #fff;
            border-radius: 8px;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

            .btn-view:hover {
                background-color: #0b5ed7;
            }

        .empty-message {
            text-align: center;
            font-size: 18px;
            color: #6c757d;
            padding: 40px;
            background-color: #f1f3f5;
            border-radius: 10px;
        }
    </style>
</head>
<body>

    <div class="container">
        <h1><i class="fas fa-bell"></i> Notifications</h1>

        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <div class="notification-card">
                    <div class="content">
                        <h3>@(string.IsNullOrEmpty(item.Shipment) ? "No Shipment" : item.Shipment)</h3>

                        @if (!string.IsNullOrEmpty(item.DeliveryNo1))
                        {
                            <p><strong>Delivery No 1:</strong> @item.DeliveryNo1</p>
                        }
                        @if (!string.IsNullOrEmpty(item.DeliveryNo2))
                        {
                            <p><strong>Delivery No 2:</strong> @item.DeliveryNo2</p>
                        }
                        @if (!string.IsNullOrEmpty(item.DeliveryNo3))
                        {
                            <p><strong>Delivery No 3:</strong> @item.DeliveryNo3</p>
                        }
                        @if (!string.IsNullOrEmpty(item.DeliveryNo4))
                        {
                            <p><strong>Delivery No 4:</strong> @item.DeliveryNo4</p>
                        }
                        @if (!string.IsNullOrEmpty(item.DeliveryNo5))
                        {
                            <p><strong>Delivery No 5:</strong> @item.DeliveryNo5</p>
                        }
                        @if (!string.IsNullOrEmpty(item.DeliveryNo6))
                        {
                            <p><strong>Delivery No 6:</strong> @item.DeliveryNo6</p>
                        }
                        @if (!string.IsNullOrEmpty(item.DeliveryNo7))
                        {
                            <p><strong>Delivery No 7:</strong> @item.DeliveryNo7</p>
                        }
                        @if (!string.IsNullOrEmpty(item.DeliveryNo8))
                        {
                            <p><strong>Delivery No 8:</strong> @item.DeliveryNo8</p>
                        }
                        @if (!string.IsNullOrEmpty(item.DeliveryNo9))
                        {
                            <p><strong>Delivery No 9:</strong> @item.DeliveryNo9</p>
                        }
                        @if (!string.IsNullOrEmpty(item.DeliveryNo10))
                        {
                            <p><strong>Delivery No 10:</strong> @item.DeliveryNo10</p>
                        }
                        @if (!string.IsNullOrEmpty(item.DeliveryNo11))
                        {
                            <p><strong>Delivery No 11:</strong> @item.DeliveryNo11</p>
                        }
                        @if (!string.IsNullOrEmpty(item.DeliveryNo12))
                        {
                            <p><strong>Delivery No 12:</strong> @item.DeliveryNo12</p>
                        }
                        @if (!string.IsNullOrEmpty(item.DeliveryNo13))
                        {
                            <p><strong>Delivery No 13:</strong> @item.DeliveryNo13</p>
                        }
                        @if (!string.IsNullOrEmpty(item.DeliveryNo14))
                        {
                            <p><strong>Delivery No 14:</strong> @item.DeliveryNo14</p>
                        }
                        @if (!string.IsNullOrEmpty(item.DeliveryNo15))
                        {
                            <p><strong>Delivery No 15:</strong> @item.DeliveryNo15</p>
                        }
                        @if (!string.IsNullOrEmpty(item.DeliveryNo16))
                        {
                            <p><strong>Delivery No 16:</strong> @item.DeliveryNo16</p>
                        }
                        @if (!string.IsNullOrEmpty(item.DeliveryNo17))
                        {
                            <p><strong>Delivery No 17:</strong> @item.DeliveryNo17</p>
                        }
                        @if (!string.IsNullOrEmpty(item.DeliveryNo18))
                        {
                            <p><strong>Delivery No 18:</strong> @item.DeliveryNo18</p>
                        }
                        @if (!string.IsNullOrEmpty(item.DeliveryNo19))
                        {
                            <p><strong>Delivery No 19:</strong> @item.DeliveryNo19</p>
                        }
                        @if (!string.IsNullOrEmpty(item.DeliveryNo20))
                        {
                            <p><strong>Delivery No 20:</strong> @item.DeliveryNo20</p>
                        }
                        @if (!string.IsNullOrEmpty(item.DeliveryNo21))
                        {
                            <p><strong>Delivery No 21:</strong> @item.DeliveryNo21</p>
                        }
                        @if (!string.IsNullOrEmpty(item.DeliveryNo22))
                        {
                            <p><strong>Delivery No 22:</strong> @item.DeliveryNo22</p>
                        }
                        @if (!string.IsNullOrEmpty(item.DeliveryNo23))
                        {
                            <p><strong>Delivery No 23:</strong> @item.DeliveryNo23</p>
                        }
                        @if (!string.IsNullOrEmpty(item.DeliveryNo24))
                        {
                            <p><strong>Delivery No 24:</strong> @item.DeliveryNo24</p>
                        }
                        @if (!string.IsNullOrEmpty(item.DeliveryNo25))
                        {
                            <p><strong>Delivery No 25:</strong> @item.DeliveryNo25</p>
                        }

                        @if (!string.IsNullOrEmpty(item.TotalPC))
                        {
                            <p><strong>Total PC:</strong> @item.TotalPC</p>
                        }
                        @if (!string.IsNullOrEmpty(item.Carrier))
                        {
                            <p><strong>Carrier:</strong> @item.Carrier</p>
                        }

                        <a asp-controller="Guards" asp-action="Create" class="btn-view">
                            <i class="fas fa-eye"></i> View Details
                        </a>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="empty-message">
                <p><i class="fas fa-info-circle"></i> No selected notifications to display.</p>
            </div>
        }
    </div>

    <script src="//code.tidio.co/daq8vctxa39sfedllqglgoc1fzfoapgx.js" async></script>
</body>
</html>
