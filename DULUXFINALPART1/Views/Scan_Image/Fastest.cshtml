@model List<DULUXFINALPART1.Models.Scan_Image>

@{
    ViewData["Title"] = "Fastest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary"><i class="bi bi-file-earmark-bar-graph-fill"></i> Fastest LCN</h2>
    </div>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger shadow-sm">@ViewBag.ErrorMessage</div>
    }

    <!-- 🔸 Shipments -->
    <div class="table-responsive shadow-sm">
        <table class="table table-bordered table-hover text-center">
            <thead class="table-dark">
                <tr>
                    <th>Shipment</th>
                    <th>Time Taken (Hours)</th> <!-- New column for Time Taken -->
                </tr>
            </thead>
            <tbody>
                @{
                    var top = Model
                    .GroupBy(x => x.Shipment) // Group by Shipment
                    .Select(g => new
                    {
                        Shipment = g.Key,
                        AvgTimeTaken = g.Average(x => x.TimeTakenSeconds) // Average TimeTakenSeconds
                    })
                    .OrderBy(x => x.AvgTimeTaken) // Sort by shortest average TimeTaken
                    .Take(5); // Limit to top 5 results

                    foreach (var item in top)
                    {
                        <tr>
                            <td>@item.Shipment</td>
                            <td>@item.AvgTimeTaken</td> <!-- Display the average TimeTaken in seconds -->
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

