<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DULUXFINALPART1</title>

    <!-- Bootstrap & Font Awesome -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">

    <style>

        img, video {
            max-width: 100%;
            height: auto;
        }

        table {
            width: 100%;
            overflow-x: auto;
            display: block;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: #f0f2f5;
            margin: 0;
            padding: 0;
        }

        .wrapper {
            display: flex;
        }

        .sidebar {
            width: 250px;
            height: 100vh; /* force exact viewport height */
            background-color: #0077b6;
            color: #fff;
            transition: all 0.3s ease;
            position: fixed;
            top: 0; /* stick to top */
            bottom: 0; /* stick to bottom */
            left: 0; /* stick to left */
            padding-bottom: 20px;
            z-index:  1000;
        }

            .sidebar.collapsed {
                width: 80px;
                overflow: hidden;
            }

            .sidebar .toggle-btn {
                background: none;
                border: none;
                color: #fff;
                padding: 1rem;
                font-size: 1.5rem;
                cursor: pointer;
                width: 100%;
                text-align: right;
            }

            .sidebar ul {
                list-style: none;
                padding: 0;
            }

                .sidebar ul li {
                    padding: 15px 20px;
                    transition: background 0.3s;
                }

                    .sidebar ul li a {
                        color: #fff;
                        text-decoration: none;
                        display: flex;
                        align-items: center;
                    }

                        .sidebar ul li a i {
                            margin-right: 10px;
                            min-width: 20px;
                            text-align: center;
                        }

                    .sidebar ul li:hover {
                        background-color: #374151;
                    }

        .time {
            padding: 10px;
            font-size: 1.2rem;
            text-align: center;
            margin-top: auto;
            font-weight: bold;
            display: block;
            color: #fff;
            white-space: nowrap;
        }

        .content {
            margin-left: 250px;
            padding: 40px;
            width: 100%;
            transition: margin-left 0.3s ease;
        }

        .collapsed ~ .content {
            margin-left: 80px;
        }

        .btn-primary {
            background-color: #ff6347;
            border: none;
        }

            .btn-primary:hover {
                background-color: #e55342;
            }

        /* Adjust styles when the sidebar is collapsed */
        .sidebar.collapsed .time {
            display: none; /* Hide the time when collapsed */
        }

        .sidebar.collapsed .link-text {
            display: none; /* Hide text when sidebar is collapsed */
        }

        .sidebar.collapsed .toggle-btn {
            font-size: 2rem; /* Increase size of the toggle button */
            padding: 1.5rem;
        }

        /* Fix time text appearance when sidebar is collapsed but with a smaller width */
        .sidebar.collapsed .time {
            font-size: 0.8rem;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <nav class="sidebar" id="sidebar">
            <button class="toggle-btn" onclick="toggleSidebar()">
                <i class="fas fa-bars"></i>
            </button>
            <ul>
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-home"></i> <span class="link-text">Home</span>
                    </a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="Privacy">
                        <i class="fas fa-user-shield"></i> <span class="link-text">Privacy</span>
                    </a>
                </li>

                <li>
                    <partial name="_LoginPartial" />
                </li>
            </ul>
            <div class="time" id="current-time"></div> <!-- Time Display -->
        </nav>

        <div class="content">
            <main role="main" class="container-fluid">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('collapsed');

            // Optionally hide text on collapse
            const links = sidebar.querySelectorAll('.link-text');
            links.forEach(link => {
                link.style.display = sidebar.classList.contains('collapsed') ? 'none' : 'inline';
            });
        }

        // Hide link text if sidebar starts collapsed
        document.addEventListener('DOMContentLoaded', () => {
            if (document.getElementById('sidebar').classList.contains('collapsed')) {
                toggleSidebar();
            }
            displayDateTime(); // Initial call to display date and time
            setInterval(displayDateTime, 1000); // Update date and time every second
        });

        function displayDateTime() {
            const timeElement = document.getElementById('current-time');
            const now = new Date();

            // Format time
            const hours = now.getHours().toString().padStart(2, '0');
            const minutes = now.getMinutes().toString().padStart(2, '0');
            const seconds = now.getSeconds().toString().padStart(2, '0');
            const timeString = `${hours}:${minutes}:${seconds}`;

            // Format date
            const day = now.getDate().toString().padStart(2, '0');
            const month = (now.getMonth() + 1).toString().padStart(2, '0');
            const year = now.getFullYear();
            const dateString = `${day}/${month}/${year}`;

            // Set the content of the time and date
            timeElement.textContent = `${dateString} - ${timeString}`;
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>